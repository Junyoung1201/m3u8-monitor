{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2021",
        "module": "CommonJS",
        "noImplicitAny": true,
        "baseUrl": "./src",
        "paths": {
            "modules/*": ["modules/*"],
            "types/*": ["types/*"]
        },
        "types": ["node", "electron"],
        "outDir": "./assets"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}